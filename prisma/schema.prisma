generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url = "file:./dev.db"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?

  favouriteMeals FavouriteMeal[]

  updatedAt DateTime @updatedAt
  createaAt DateTime @default(now())
}

model FavouriteMeal {
  id String @id @default(uuid())

  idMeal  String
  strMeal String

  User   User?   @relation(fields: [userId], references: [id])
  userId String?

  updatedAt DateTime @updatedAt
  createaAt DateTime @default(now())
}
